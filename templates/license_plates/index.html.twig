{% extends 'base.html.twig' %}

{% block title %}My Cars{% endblock %}

{% block body %}
    <h1> My Cars</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>License Plate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for license_plate in license_plates %}
            <tr>
                <td>{{ license_plate.id }}</td>
                <td>{{ license_plate.licensePlate }}</td>
                <td>
                    <a href="{{ path('license_plates_show', {'id': license_plate.id}) }}">show</a>
                    <a href="{{ path('license_plates_edit', {'id': license_plate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('license_plates_new') }}">Add new car</a>
    <br>
    <a href="{{ path('home') }}">Back to Home</a>
{% endblock %}
